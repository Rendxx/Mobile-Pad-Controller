{
  // [path] section
  // Define path patterns which will replace the corresponding "#pattern name#" in Gulp task.
  "path": {
    "bower": {
      "src": "bower_components",
      "dest": "lib"
    },
    "js": {
      "direction": "Direction",
      "button": "Button",
      "info": "Info",
      "move": "Move",
      "itemViewer": "ItemViewer",
      "bower": "bower_components"
    },
    "less": {
      "direction": "Direction",
      "button": "Button",
      "info": "Info",
      "move": "Move",
      "itemViewer": "ItemViewer"
    }
  },

  // [bundle] section
  // used to define files need to be processed by gulp task
  // Note: path pattern will only match the pattern with same name(case insensitive) in the exacting same group
  // e.g. "#dest#" in [bundle.bower] will only match the "dest" string in [path.bower]
  "bundle": {
    "bower": {
      "#dest#/jquery": "#src#/jquery/dist/jquery*.{js,map}"
    },
    "less": {
      "#direction#/controller.direction": [ "#direction#/style.less" ],
      "#button#/controller.button": [ "#button#/style.less" ],
      "#info#/controller.info": [ "#info#/style.less" ],
      "#move#/controller.move": [ "#move#/style.less" ],
      "#itemViewer#/controller.itemViewer": [ "#itemViewer#/style.less" ]
    },
    "js": {
      "#direction#/controller.direction": [ "#direction#/script.js" ],
      "#button#/controller.button": [ "#button#/script.js" ],
      "#info#/controller.info": [ "#info#/script.js" ],
      "#move#/controller.move": [
        "#bower#/transform2D/js/Transform2D.js",
        "#bower#/drawing/js/Drawing.js",
        "#move#/script.js"
      ],
      "#itemViewer#/controller.itemViewer": [ "#itemViewer#/script.js" ]
    }
  }
}

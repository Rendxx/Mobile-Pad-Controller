{
  // [path] section
  // Define path patterns which will replace the corresponding "#pattern name#" in Gulp task.
  "path": {
    "bower": {
      "src": "bower_components",
      "dest": "lib"
    },
    "js": {
      "direction": "Direction",
      "button": "Button",
      "info": "Info",
      "move": "Move",
      "itemViewer": "ItemViewer",
      "bower": "bower_components"
    },
    "less": {
      "direction": "Direction",
      "button": "Button",
      "info": "Info",
      "move": "Move",
      "itemViewer": "ItemViewer"
    }
  },

  // [bundle] section
  // used to define files need to be processed by gulp task
  // Note: path pattern will only match the pattern with same name(case insensitive) in the exacting same group
  // e.g. "#dest#" in [bundle.bower] will only match the "dest" string in [path.bower]
  "bundle": {
    "bower": {
      "#dest#/jquery": "#src#/jquery/dist/jquery*.{js,map}"
    },
    "less": {
      "#direction#/controller.direction": [ "#direction#/src/controller.direction.less" ],
      "#button#/controller.button": [ "#button#/src/controller.button.less" ],
      "#info#/controller.info": [ "#info#/src/controller.info.less" ],
      "#move#/controller.move": [ "#move#/src/controller.move.less" ],
      "#itemViewer#/controller.itemViewer": [ "#itemViewer#/src/controller.itemViewer.less" ]
    },
    "js": {
      "#direction#/controller.direction": [ "#direction#/src/controller.direction.js" ],
      "#button#/controller.button": [ "#button#/src/controller.button.js" ],
      "#info#/controller.info": [ "#info#/src/controller.info.js" ],
      "#move#/controller.move": ["#move#/src/controller.move.js"],
      "#itemViewer#/controller.itemViewer": [ "#itemViewer#/src/controller.itemViewer.js" ]
    }
  }
}
